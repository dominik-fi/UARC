@model IEnumerable<IdentityRole>

@await Html.PartialAsync("~/Views/Shared/Components/AccountManage/Navbar.cshtml")

<h6 class="bg-dark p-1 text-white">Benutzergruppen</h6>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>


@if (Model.Count() == 0)
{
    <p class="p-1 text-black">Keine Rollen vorhanden.</p>
}
else
{
    <table class="table table-bordered">
        <tr>
            <th>Gruppen ID</th>
            <th>Gruppenbezeichnung</th>
            <th>Aktionen</th>
        </tr>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    @*<form asp-action="Delete" asp-route-id="@role.Id" method="post">*@
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@role.Id">Benutzer hinzufügen / entfernen</a>
                    @*<button type="submit"class="btn btn-primary">Löschen</button>*@
                    @*</form>*@
                </td>
            </tr>
        }
    </table>
}

